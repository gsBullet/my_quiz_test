<html>
<%- include('./layouts/header') %>

<body class="body">
    <div class="container">

        <div class="today"></div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3">
                <!-- todo from -->
                <form action="/form-info" method="POST">

                    <div class="add-control">
                        <div class="form-group has-feedback">
                            <input type="text" name="todo_title" class="form-control" placeholder="✍️ Add item..." />
                            <button style="padding: 0; border: 0;" class="form-control-feedback add-btn">

                                <i class="fa fa-plus " title="Add item"></i>
                            </button>
                        </div>
                    </div>

                </form>


                <!-- todo warning -->
                <p class="err text-danger text-center hidden">
                    <i class="fa fa-warning"></i>
                    Oops! Please, enter nameitem
                </p>
                <p class="no-items text-muted text-center hidden">
                    <i class="fa fa-ban"></i>
                </p>
                <!-- todo list -->
                <ul class="todo-list ui-sortable">
                    <% todo_list.forEach((element,index) => { %>

                    <li class="">
                        <div class="checkbox">
                            <span class="close edit">
                                <a href="./edit/<%= index %>">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </span>
                            <span class="close">
                                <a href="./delete/<%= index %>">
                                    <i class="fa fa-times"></i>
                                </a>
                            </span>
                            <label>
                                <span class="checkbox-mask"></span>
                                <input type="checkbox">
                                <%= element.title %>
                            </label>
                        </div>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>

    </div>
</body>
<%- include('./layouts/footer') %>



</html>